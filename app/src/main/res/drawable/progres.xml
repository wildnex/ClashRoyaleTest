<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />

            <gradient android:startColor="#34332F"
                android:centerY="1.0"
                android:endColor="#161616"
                android:angle="270" />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="1dp"
        android:bottom="2dp"
        android:right="1dp"
        android:left="1dp">
        <clip>
            <shape>
                <corners android:radius="3dp" />

                <gradient android:startColor="#B8FF5C"
                    android:centerY="1.0"
                    android:endColor="#1D6C02"
                    android:angle="270" />

            </shape>
        </clip>
    </item>


</layer-list>