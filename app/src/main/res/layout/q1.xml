<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:soundEffectsEnabled="false"

    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:gravity="top|center"
            android:text="Ты боишься высоты?"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"

            android:shadowDx="1.0"
            android:shadowDy="2.0"
            android:shadowRadius="5.0"

            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom|fill_horizontal"
            android:background="@drawable/pr4"
            android:indeterminate="false"
            android:maxHeight="15dp"
            android:minHeight="10dp"
            android:progressDrawable="@drawable/progres" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|fill_horizontal"
            android:layout_marginBottom="140dp"
            android:layout_marginTop="30dp"
            android:paddingBottom="17dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/qw1" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="410dp"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="btn1"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:srcCompat="@drawable/butt"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageButton
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="btn2"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:srcCompat="@drawable/butt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="btn3"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/butt" />

                <ImageButton
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:onClick="btn4"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/butt" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tableLayout">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="216dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center_vertical|center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:shadowColor="#000000"

                    android:shadowDx="1.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="5.0"
                    android:text="Не проверял"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="89dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:shadowColor="#000000"
                    android:shadowDx="1.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="5.0"

                    android:text="Ничего не боюсь "
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow
                android:layout_width="351dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="269dp"
                    android:layout_height="98dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"

                    android:shadowColor="#000000"
                    android:shadowDx="1.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="5.0"

                    android:text="Я летун!"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:shadowColor="#000000"

                    android:shadowDx="1.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="5.0"
                    android:text="Больше чем скелетов"

                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </TableRow>

        </TableLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>